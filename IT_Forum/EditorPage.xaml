<Page x:Class="IT_Forum.EditorPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:IT_Forum"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EditorPage"
      Background="{StaticResource MainBackgroundBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0"
                Background="{StaticResource SecondaryBackgroundBrush}"
                Padding="10">
            <DockPanel>
                <TextBlock Text="Режим редактора статей"
                           Style="{StaticResource HeaderTextStyle}"
                           DockPanel.Dock="Left"/>

                <Button Content="Вернуться на главную"
                        DockPanel.Dock="Right"
                        Click="BackButton_Click"
                        Height="50" Width="300"/>
            </DockPanel>
        </Border>

        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Background="{StaticResource SecondaryBackgroundBrush}"
                    CornerRadius="5"
                    Padding="10"
                    Margin="0,0,10,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Заголовок статьи:"
                               Grid.Row="0" Grid.Column="0"
                               Margin="10"
                               VerticalAlignment="Center"
                               Style="{StaticResource TextBlocks}"/>
                    <TextBox x:Name="ArticleTitleTextBox"
                             Grid.Row="0" Grid.Column="1"
                             Margin="5"/>
                    <!-- сюда привязать заголовок выбранной статьи -->

                    <TextBlock Text="Автор:"
                               Grid.Row="1" Grid.Column="0"
                               Margin="10"
                               VerticalAlignment="Center"
                               Style="{StaticResource TextBlocks}"/>
                    <TextBox x:Name="ArticleAuthorTextBox"
                             Grid.Row="1" Grid.Column="1"
                             Margin="5"
                             IsReadOnly="True"/>
                    <!-- сюда привязать ФИО автора -->

                    <TextBlock Text="Текст статьи:"
                               Grid.Row="2" Grid.Column="0"
                               Margin="0,0,10,5"
                               VerticalAlignment="Top"
                               Style="{StaticResource TextBlocks}"/>
                    <TextBox x:Name="ArticleContentTextBox"
                             Grid.Row="2" Grid.Column="1"
                             Margin="5"
                             AcceptsReturn="True"
                             VerticalScrollBarVisibility="Auto"
                             TextWrapping="Wrap"/>
                    <!-- сюда привязать полный текст статьи -->

                    <StackPanel Grid.Row="3" Grid.ColumnSpan="2"
                                Orientation="Horizontal"
                                HorizontalAlignment="Left">
                        <Button Content="Одобрить"/>
                        <Button Content="Отклонить"/>
                        <Button Content="Отправить на доработку"/>
                        <!-- в обработчиках этих кнопок менять статус статьи -->
                    </StackPanel>
                </Grid>
            </Border>

            <StackPanel Grid.Column="1">
                <Border Background="{StaticResource SecondaryBackgroundBrush}"
                        CornerRadius="5"
                        Padding="10"
                        Margin="0,0,0,10">
                    <StackPanel>
                        <TextBlock Text="Статьи на модерации"
                                   Style="{StaticResource HeaderTextStyle}"/>
                        <ListView x:Name="PendingArticlesListView"
                                  Height="200">
                            <!--  сюда привязать список статей со статусом "На модерации" -->
                            
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="Заголовок" Width="150"
                                                    DisplayMemberBinding="{Binding Title}"/>
                                    <GridViewColumn Header="Автор" Width="120"
                                                    DisplayMemberBinding="{Binding AuthorName}"/>
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </StackPanel>
                </Border>

                <Border Background="{StaticResource SecondaryBackgroundBrush}"
                        CornerRadius="5"
                        Padding="10">
                    <StackPanel>
                        <TextBlock Text="Теги статьи"
                                   Style="{StaticResource HeaderTextStyle}"/>
                        <ListView x:Name="TagsListView" Height="120">
                            <!-- TODO: сюда привязать теги выбранной статьи -->
                            <!-- ItemsSource="{Binding SelectedArticleTags}" -->
                        </ListView>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
