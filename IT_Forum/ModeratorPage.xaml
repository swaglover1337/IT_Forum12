<Page x:Class="IT_Forum.ModeratorPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:IT_Forum"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ModeratorPage"
      Background="{StaticResource MainBackgroundBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0"
                Background="{StaticResource SecondaryBackgroundBrush}"
                Padding="10">
            <DockPanel>
                <TextBlock Text="Режим модерации комментариев"
                           Style="{StaticResource HeaderTextStyle}"
                           DockPanel.Dock="Left"/>
                <Button Content="Вернуться на главную"
                        DockPanel.Dock="Right"
                        Click="BackButton_Click"
                        Height="50" Width="300"/>
            </DockPanel>
        </Border>

        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Background="{StaticResource SecondaryBackgroundBrush}"
                    CornerRadius="5"
                    Padding="10"
                    Margin="0,0,10,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Комментарии пользователей"
                               Style="{StaticResource HeaderTextStyle}"/>

                    <ListView x:Name="CommentsListView"
                              Grid.Row="1"
                              Margin="0,5,0,0">
                        <!-- сюда привязать список комментариев в реальном времени -->
                        <!-- ItemsSource="{Binding Comments}" -->
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Пользователь" Width="120"
                                                DisplayMemberBinding="{Binding UserName}"/>
                                <GridViewColumn Header="Статья" Width="150"
                                                DisplayMemberBinding="{Binding ArticleTitle}"/>
                                <GridViewColumn Header="Текст" Width="250"
                                                DisplayMemberBinding="{Binding ShortText}"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>
            </Border>

            <Border Grid.Column="1"
                    Background="{StaticResource SecondaryBackgroundBrush}"
                    CornerRadius="5"
                    Padding="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Детали комментария"
                               Style="{StaticResource HeaderTextStyle}"/>

                    <TextBox x:Name="CommentDetailsTextBox"
                             Grid.Row="1"
                             Margin="0,5,0,5"
                             AcceptsReturn="True"
                             TextWrapping="Wrap"
                             VerticalScrollBarVisibility="Auto"
                             IsReadOnly="True"/>
                    <!-- сюда привязать полный текст выбранного комментария -->

                    <StackPanel Grid.Row="2"
                                Orientation="Horizontal"
                                HorizontalAlignment="Left">
                        <Button Content="Удалить комментарий"/>
                        <Button Content="Заблокировать пользователя"/>
                        <!-- в обработчиках реализовать действия модератора -->
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Page>
