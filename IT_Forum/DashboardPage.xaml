<Page x:Class="IT_Forum.DashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:IT_Forum"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="900"
      Title="DashboardPage"
      Background="{StaticResource MainBackgroundBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0"
                Background="{StaticResource SecondaryBackgroundBrush}"
                Padding="10">
            <DockPanel>
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                    <TextBlock Text="IT-Форум – Главная страница"
                               VerticalAlignment="Center"
                               FontFamily="Segoe UI"
                               FontSize="16"
                               FontWeight="Bold"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center">
                    <Button Content="Режим редактора"
                            Click="EditorModeButton_Click"/>
                    <Button Content="Режим модератора"
                            Click="ModeratorModeButton_Click"/>
                    <Button Content="Режим администратора"
                            Click="AdminModeButton_Click"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal"
                            DockPanel.Dock="Right"
                            HorizontalAlignment="Right">
                    <!-- TODO: сюда можно привязать имя текущего пользователя -->
                    <!-- TextBlock Text="{Binding CurrentUserName}" Margin="0,0,10,0"/> -->
                    <Button Content="Выход"
                            Click="LogoutButton_Click"/>
                </StackPanel>
            </DockPanel>
        </Border>
        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Border Background="{StaticResource SecondaryBackgroundBrush}"
                    CornerRadius="5"
                    Padding="10"
                    Margin="0,0,10,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Последняя активность статей"
                               Style="{StaticResource HeaderTextStyle}"/>
                    <ListView x:Name="ArticlesActivityListView"
                              Grid.Row="1"
                              Margin="0,5,0,0">
                        <!-- TODO: сюда привязать ItemsSource к списку активности статей -->
                        <!-- Пример: ItemsSource="{Binding ArticlesActivity}" -->

                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Статья" Width="200" 
                                                DisplayMemberBinding="{Binding Title}"/>
                                <GridViewColumn Header="Автор" Width="150"
                                                DisplayMemberBinding="{Binding AuthorName}"/>
                                <GridViewColumn Header="Статус" Width="100"
                                                DisplayMemberBinding="{Binding Status}"/>
                                <GridViewColumn Header="Дата" Width="120"
                                                DisplayMemberBinding="{Binding Date}"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>
            </Border>
            <StackPanel Grid.Column="1">
                <Border Background="{StaticResource SecondaryBackgroundBrush}"
                        CornerRadius="5"
                        Padding="10"
                        Margin="0,0,0,10">
                    <StackPanel>
                        <TextBlock Text="Статистика по статьям"
                                   Style="{StaticResource HeaderTextStyle}"/>
                        <!-- TODO: сюда можно вывести общие показатели:
                             всего статей, на модерации, опубликовано и т.п. -->
                        <TextBlock Text="Всего статей: 0" Margin="0,0,0,5" Style="{StaticResource TextBlocks}"/>
                        <TextBlock Text="На модерации: 0" Margin="0,0,0,5" Style="{StaticResource TextBlocks}"/>
                        <TextBlock Text="Опубликовано: 0" Margin="0,0,0,5" Style="{StaticResource TextBlocks}"/>
                    </StackPanel>
                </Border>

                <Border Background="{StaticResource SecondaryBackgroundBrush}"
                        CornerRadius="5"
                        Padding="10">
                    <StackPanel>
                        <TextBlock Text="Фильтры"
                                   Style="{StaticResource HeaderTextStyle}"/>
                        <!-- TODO: сюда можно добавить фильтрацию по дате/статусу/автору -->
                        <TextBlock Text="Поиск по заголовку:" Style="{StaticResource TextBlocks}"/>
                        <TextBox x:Name="SearchTextBox" Margin="5" />
                        <Button Content="Применить фильтр"/>
                        <Image 
                    Grid.Row="3" 
                    Source="/Resources/logo.png"
                    Stretch="Uniform"
                    HorizontalAlignment="Center"
                    Width="150"
                    Height="150"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
